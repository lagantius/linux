#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias sw='swayimg'
alias cs='rm ~/obrázky/screenshoty/*'
alias up='~/.config/scripts/update'
alias fd='sudo mount /dev/sdc1 /mnt/usb1'
alias fdr='sudo umount /mnt/usb1'
alias slp='systemctl suspend && swaylock -k --indicator-idle-visible -i ~/obrázky/tapety/default.png'
alias gpgkill='gpgconf --kill gpg-agent'
PS1='\[\033[1;32m\][\u@\h \w] > \[\033[0m\]'
